#################################
# <%= @name %> DHCP Group
#################################
group <%= @name  %> {
<% if @options.is_a? Array -%>
<%   @options.each do |opt| -%>
  option <%= opt %>;
<%   end -%>
<% elsif @options != '' -%>
  option <%= @options %>;
<% end -%>
<% if @parameters.is_a? Array -%>
<%   @parameters.each do |param| -%>
  <%= param %>;
<%   end -%>
<% elsif @parameters != '' -%>
  <%= @parameters %>;
<% end -%>

